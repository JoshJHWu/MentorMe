<h1>Create Appointment</h1>

<%=form_for @appointment do |f|%>
  <p>
    <%=f.label 'Start date' %>
    <input  type="date" name="appointment[start_date]">
  </p>
    <p>
    <%=f.label 'Start time' %>
    <input type='time' name="appointment[start_time]">

  </p>
  <p>
    <%=label_tag 'Duration in minutes'%>
    <select name='appointment[duration]'>
      <option value='30'>30</option>
      <option value='60'>60</option>
    </select>
  </p>
  <%=f.submit%>
<%end%>
