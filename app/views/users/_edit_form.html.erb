<%=form_for @user, url: {controller: 'users', action: 'update'} do |f| %>
  <table>
    <tr>
      <td><%=f.label :email %></td>
      <td><%=f.text_field :email %></td>
    </tr>
    <tr>
      <td><%=f.label :password%></td>
      <td><%=f.password_field :password%></td>
    </tr>
    <tr>
      <td><%=f.label :first_name%></td>
      <td><%=f.text_field  :first_name%></td>
    </tr>
    <tr>
      <td><%=f.label :last_name%></td>
      <td><%=f.text_field :last_name%></td>
    </tr>
    <tr>
      <td><%=f.label :phone%></td>
      <td><%=f.text_field :phone%></td>
    </tr>
    <tr>
      <td><%=f.label :phase %></td>
      <td>
        <select name='<%=@user.type.downcase%>[phase]'>
          <option value='1'>1</option>
          <option value='2'>2</option>
          <option value='3'>3</option>
        </select>
      </td>
    </tr>
    <tr>
      <td><%=f.label 'Are you registering as a mentor?'%></td>
      <td><%=f.check_box :type, {}, 'Mentor', 'Student'%></td>
    </tr>
    <tr>
      <td><%=submit_tag%></td>
    </tr>
  </table>
<%end%>


